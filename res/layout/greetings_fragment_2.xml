<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout 
        android:id="@+id/greetings_fragment_2_facebook_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="#cdcdcd"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/greetings_fragment_2_facebook_button_image"
	        android:layout_width="40dp"
	    	android:layout_height="40dp"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/facebook_inactive_states"
	    	android:duplicateParentState="true"
	        >
	    </ImageView>
	    
        <TextView 
            android:id="@+id/greetings_fragment_2_facebook_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/greetings_fragment_2_facebook_button_image"
            android:layout_centerVertical="true"
            android:textColor="#777777"
            android:text="You have been greeted by this app. Happy moment! Share this.."
            >
        </TextView>
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/greetings_fragment_2_greetings_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20dp"
        >
    </TextView>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="11dp"
        android:layout_margin="10dp"
        android:text="Name has been asked from previous fragment through an interface"
        >
    </TextView>
</RelativeLayout>
